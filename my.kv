#:import MDRaisedButton kivymd.uix.button.MDRaisedButton
#:import MDToolbar kivymd.uix.toolbar.MDToolbar
#:import MDTextField kivymd.textfields.MDTextField
#:import MDProgressBar kivymd.progressbar.MDProgressBar
#:import MDSpinner kivymd.spinner.MDSpinner
#:import MDList kivymd.list.MDList

<MyBoxLayout>:
	id: box_container
	orientation: 'vertical'
	MDToolbar:
		id: toolbar
		title: 'NimmiTube'
		md_bg_color: app.theme_cls.primary_color
		background_palette: 'Primary'
		background_hue: '500'
		right_action_items: [['content-copy', lambda x: box_container.pasteURL() ], ['plus', lambda x: box_container.resetApp()]]
		left_action_items: [['menu', lambda x: None]]
	BoxLayout:
		orientation: 'horizontal'
		spacing: 10
		padding: 10
		size_hint: (1,.25)
		MDTextField:
			id: inputUrl
			hint_text: "Enter URL here.."
			color_mode: 'custom'
			line_color_focus: 1, 1, 1, 1
		MDRaisedButton:
		    text: "Go"
			on_press: box_container.goButtonClicked(inputUrl.text)
	MDSpinner:
		id: spinner
		padding: 10
		size_hint: None, None
		size: dp(46), dp(46)
		pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		active: False

	ScrollView:
		BoxLayout:
			id: b1
			orientation: 'vertical'

	MDFloatingActionButton:
		id: float_act_btn
		icon: 'download'
		opposite_colors: True
		elevation_normal: 8
		pos_hint: {'center_x': 0.85, 'center_y': 1}
		disabled: False
		on_press: box_container.downloadButtonClicked()

	BoxLayout:
		id: b2
		size_hint: (1,.1)
		MDProgressBar:
			id: progress_bar
